<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MedLock"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#5b5d60"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PATIENT CONTROL SYSTEM"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#5b5d60"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="106dp"
                android:layout_height="130dp"
                android:id="@+id/logo"
                android:layout_marginTop="10dp"
                android:background="@drawable/medlock"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Doctor or Nurse Mail "
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/et_u_mail"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:background="#d2d4dc"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Password"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_u_password"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:layout_height="40dp"
                android:background="#d2d4dc"/>

            <Button
                android:id="@+id/bLogin"
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>





</LinearLayout>


